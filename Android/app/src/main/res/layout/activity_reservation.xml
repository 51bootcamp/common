<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kahye.common.ReservationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/classImgView"
                android:layout_width="fill_parent"
                android:layout_height="270dp"
                android:layout_margin="0dp"
                android:background=
                    "@drawable/com_facebook_auth_dialog_background"
                android:padding="0dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/classInfoView"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/classImgView"
                android:layout_width="327dp"
                android:layout_height="110dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra ="8dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/dateView"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/classInfoView"
                android:layout_width="327dp"
                android:layout_height="31dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:text="Date"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/timeScrollerView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/dateView"
                android:layout_margin="12dp"
                android:background="@android:color/white"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/timeListView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_alignParentLeft="true"
                        android:listSelector="#d3d3d3"
                        android:nestedScrollingEnabled="true"
                        android:scrollbars="vertical" />
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <TextView
                android:id="@+id/ticketTextView"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/timeScrollerView"
                android:layout_width="327dp"
                android:layout_height="31dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:text="Tickets"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="NotSibling" />

            <ImageButton
                android:id="@+id/downButton"
                android:adjustViewBounds="true"
                android:background="@color/cardview_light_background"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/ticketTextView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/down" />

            <ImageButton
                android:id="@+id/upButton"
                android:adjustViewBounds="true"
                android:background="@color/cardview_light_background"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ticketTextView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/up" />

            <TextView
                android:id="@+id/numOfTickets"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="31dp"
                android:layout_below="@id/ticketTextView"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/getTickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numOfTickets"
                android:layout_alignEnd="@+id/numOfTickets"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="Get Tickets" />

        </RelativeLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>